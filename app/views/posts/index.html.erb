<h1>TwiControlls#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<table>
  <tr>
    <th>つぶやき一覧
    </th>
  </tr>
  <% @twiindex.each do |twiindex| %>
    <tr>
      <td><%= twiindex.content %></td>
      <td><%= link_to "編集",edit_post_path(twiindex.id) %></td>
      <td><%= link_to '削除', post_path(twiindex.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>
